{
    "paths": {
        "bin_dir": "/data/track-ml/eramia/compiled/",
        "save_dir": "results",
        "log_dir": "logs"
    },
    "data": {
        "filename": "./dataset/phi025-025_eta025-025_train1_lasthit_20200219.csv",
        "train_split": 0.80,
        "normalise": true,
        "cylindrical": false,
        "num_hits": 10,
        "features": 3                
    },
    "training": {
        "epochs": 15,
        "batch_size": 6,
        "validation": 0.2,
        "save_model": true,
        "load_model": false,
        "use_gpu": true,
        "show_metrics": false,
        "shuffle": true,
        "earlystopping": true    
    },
    "testing": {
        "type_optimization" : "nearest",
        "normalise": false,
        "tolerance": 0.02
    },
    "model": {
        "name": "cnn-parallel",
        "overwrite": true,
        "loss": "mse",
        "metrics": ["acc"],
        "optimizer": "adam",
        "isparallel": true,        
        "layers": [
            {
                "type": "cnn",
                "filters": 64,
                "kernel_size": 2,
                "activation": "relu",
                "input_timesteps": 4,
                "input_features": 1
            },
            {
                "type": "maxpooling",
                "pool_size": 2
            },
            {
                "type": "flatten"
            }, 
            {
                "type": "dense",
                "neurons": 64,
                "activation": "relu"
            },              
            {
                "type": "dense",
                "neurons": 3,
                "activation": "linear"
            }
        ]
    }
}
